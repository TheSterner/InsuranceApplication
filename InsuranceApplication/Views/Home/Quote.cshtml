@{

				ViewBag.Title = "Quote";
}

@using InsuranceApplication.ViewModels
@model QuoteVm

<div class="row no-gutters m-3">

	@using (Html.BeginForm("CustomerInfo", "Home", FormMethod.Post))
	{

		<div class="col-lg-12 mx-auto shadow">

			<div class="card-header text-center  bg-primary">
				<h1 class="m-0>">Your Quote</h1>
			</div>
			<div class="card-body">
				<div class="col-10 m-2">
					<h2>Quote</h2>
					@Model.FirstName
					@Model.LastName
					@Model.Quote

				</div>
			</div>

			<div id="finishQuote">

			</div>

		</div>
	}
</div>